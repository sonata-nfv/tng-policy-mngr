import eu.tng.policymanager.facts.action.*
import eu.tng.policymanager.facts.enums.*

declare  MonitoredComponent 
    @expires( 2m )
    @role( event )

end

declare  LogMetric 
    @expires( 5s )
    @role( event )

end

declare  ElasticityAction 
    @expires( 5s )
    @role( event )

end



